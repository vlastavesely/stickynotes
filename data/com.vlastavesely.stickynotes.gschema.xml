<?xml version="1.0"?>
<schemalist>
  <schema id="com.vlastavesely.stickynotes" path="/com/vlastavesely/stickynotes/">
    <key name="note-list" type="as">
      <default>[]</default>
      <summary>List of notes</summary>
      <description>List of notes known to the program.</description>
    </key>
  </schema>
  <schema id="com.vlastavesely.stickynotes.note">
    <key name="title" type="s">
      <default>''</default>
      <summary>The title of the note</summary>
    </key>
    <key name="text" type="s">
      <default>''</default>
      <summary>The text of the note</summary>
    </key>
    <key name="width" type="i">
      <default>100</default>
      <summary>Width of the note</summary>
    </key>
    <key name="height" type="i">
      <default>100</default>
      <summary>Height of the note</summary>
    </key>
    <key name="x" type="i">
      <default>100</default>
      <summary>Offset from the left</summary>
    </key>
    <key name="y" type="i">
      <default>100</default>
      <summary>Offset from the top</summary>
    </key>
    <key name="colour" type="s">
      <default>'#fff4a4'</default>
      <summary>The background colour of the note</summary>
    </key>
    <key name="font-colour" type="s">
      <default>'#000000'</default>
      <summary>The font colour of the note</summary>
    </key>
    <key name="font" type="s">
      <default>'monospace 12'</default>
      <summary>The note's font</summary>
    </key>
    <key name="locked" type="b">
      <default>false</default>
      <summary>Whether the note is locked</summary>
    </key>
  </schema>
</schemalist>
